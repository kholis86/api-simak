                                                        "example": "Islam"
                                                    },
                                                    "Marital_Status": {
                                                        "type": "string",
                                                        "example": "Single"
                                                    },
                                                    "Birth_Place": {
                                                        "type": "string",
                                                        "example": "Palembang"
                                                    },
                                                    "Birth_Date": {
                                                        "type": "string",
                                                        "format": "date",
                                                        "example": "2002-05-20"
                                                    },
                                                    "Entry_Year": {
                                                        "type": "integer",
                                                        "example": 2022
                                                    },
                                                    "Entry_Term_Id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "Nisn": {
