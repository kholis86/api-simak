                ],
                "summary": "Get student list",
                "operationId": "394857d3d6f6e1755d52d4266e42bb1b",
                "parameters": [
                    {
                        "name": "nim",
                        "in": "query",
                        "description": "Filter by Nim",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "register_number",
                        "in": "query",
                        "description": "Filter by Register Number",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "department",
                        "in": "query",
                        "description": "Filter by Department Id",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
